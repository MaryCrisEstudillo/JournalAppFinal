<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<style>
.container{
    display: flex;
    flex-direction: row;
    margin: 3vw 0vw 1vw 15vw;
    justify-content: center;
    justify-self: center;
}
</style>
<h1 style="background-color:rgb(2, 102, 184); height:4vw; padding:.7vw 0vw 1vw 0vw; color:white; text-align:center;">MY JOURNAL</h1>
<div class="container">
<% @tasks.each do |mytask| %>
<div class="card text-center" style="width:18rem; margin:0vw 0vw 0vw 2vw">
    <div class="card-body" style= "box-shadow: 0vw -.2vw .5vw -.2vw rgba(2, 102, 184, 0.363); border:none;">
      <h5 class="card-title" style="width:6vw;height:6vw"><%= mytask.title %></h5>
      <h5 class="card-title" style="width:6vw;height:6vw"><%= mytask.body %></h5>
      <span><%= link_to 'Show', mytask, class:"btn btn-outline-secondary", style:"text-decoration:none; font-size:.6vw" %></span>
      <span><%= link_to 'Edit', edit_task_path(mytask), class:"btn btn-outline-secondary", style:" text-decoration:none; font-size:.6vw" %></span>
    </div>
</div>
<% end %>
</div>
<div><%= link_to '+', new_task_path, style:"position:absolute; margin:25vw 0vw 0vw 93vw; background-color:rgb(2, 102, 184); width:3.5vw; height:3.5vw; color:white; border-radius:3.7vw; font-size:2vw; padding:0vw 0vw 1vw 0vw; text-decoration:none; text-align:center;" %></div>
